<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="group_warehouse_restrict_root" model="ir.module.category">
            <field name="name">Warehouse Restrictions</field>
            <field name="description">Helps you handle your Basic needs.</field>
        </record>

        <record id="group_restrict_warehouse" model="res.groups">
            <field name="name">Restrict Stock Warehouses</field>
            <field name="category_id" ref="group_warehouse_restrict_root"/>
        </record>

        <record id="group_access_purchase_reporting" model="res.groups">
            <field name="name">Purchase Reporting/Configuration</field>
            <field name="category_id" ref="group_warehouse_restrict_root"/>
        </record>

        <record id="filter_user_stock_picking_type_allowed_new" model="ir.rule">
            <field name="name">Filter Stock Picking Type Allowed new</field>
            <field name="model_id" search="[('model','=','stock.picking.type')]" model="ir.model"/>
            <field name="groups" eval="[(4, ref('group_restrict_warehouse'))]"/>
            <field name="domain_force">[('id','in', [ p.id for p in user.default_picking_type_ids ])]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="filter_user_stock_pickings_allowed" model="ir.rule">
            <field name="name">Filter Stock Pickings Allowed</field>
            <field name="model_id" search="[('model','=','stock.picking')]" model="ir.model"/>
            <field name="groups" eval="[(4, ref('group_restrict_warehouse'))]"/>
            <field name="domain_force">[('picking_type_id','in', [ p.id for p in user.default_picking_type_ids ])]
            </field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="filter_user_purchase_order_allowed" model="ir.rule">
            <field name="name">Filter Purchase Order Allowed</field>
            <field name="model_id" search="[('model','=','purchase.order')]" model="ir.model"/>
            <field name="groups" eval="[(4, ref('group_restrict_warehouse'))]"/>
            <field name="domain_force">[('picking_type_id','in', [ p.id for p in user.default_picking_type_ids ])]
            </field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="purchase.purchase_report" model="ir.ui.menu">
            <field name="groups_id" eval="[(4, ref('group_access_purchase_reporting'))]"/>
        </record>

        <record id="purchase.menu_purchase_config" model="ir.ui.menu">
            <field name="groups_id" eval="[(4, ref('group_access_purchase_reporting'))]"/>
        </record>

    </data>
</odoo>

