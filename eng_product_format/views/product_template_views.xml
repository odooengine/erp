<odoo>

    <record id="view_product_template_form_inherit" model="ir.ui.view">
        <field name="name">product.template.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='options']" position="after">
                <div name="options_types">
                    <div>
                        <field name="accessories"/>
                        <label for="accessories"/>
                    </div>
                    <div>
                        <field name="fabric"/>
                        <label for="fabric"/>
                    </div>
                </div>
            </xpath>
            <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="attrs">{'readonly': 1,'required': 0}</attribute>
            </xpath>
            <xpath expr="//field[@name='barcode']" position="after">
                <field name="age_group_id"/>
                <field name="calender_season_id" required="1"/>
                <field name="class_fabric_id" attrs="{'required': [('fabric', '=', True)]}"/>
                <field name="dept_id" required="1"/>
                <field name="product_gender"/>
            </xpath>
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="line_item_id"/>
                <field name="product_group_id"/>
                <field name="size_range_id"/>
                <field name="life_type_id" attrs="{'required': [('fabric', '=', True)]}"/>
                <field name="accessories_type_id" attrs="{'invisible': [('accessories', '=', False)],'required': [('accessories', '=', True)]}"/>
            </xpath>
        </field>
    </record>

</odoo>
