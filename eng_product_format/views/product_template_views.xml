<odoo>

    <record id="view_product_template_form_inherit" model="ir.ui.view">
        <field name="name">product.template.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='options']" position="after">
                <div name="options_types">
                    <div>
                        <field name="accessories" attrs="{'readonly': [('is_freeze', '=', True)]}"/>
                        <label for="accessories"/>
                    </div>
                    <div>
                        <field name="fabric" attrs="{'readonly': [('is_freeze', '=', True)]}"/>
                        <label for="fabric"/>
                    </div>
                    <div>
                        <field name="finish" attrs="{'readonly': [('is_freeze', '=', True)]}"/>
                        <label for="finish"/>
                    </div>
                </div>
            </xpath>
            <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="attrs">{'readonly': 1,'required': 0}</attribute>
            </xpath>
            <xpath expr="//field[@name='barcode']" position="after">
                <field name="age_group_id" options="{'no_quick_create': True, 'no_create': True}"/>
                <field name="engine_year_id" required="1" options="{'no_quick_create': True, 'no_create': True}" attrs="{'readonly': [('is_freeze', '=', True)]}"/>
                <field name="calender_season_id" required="1" options="{'no_quick_create': True, 'no_create': True}" attrs="{'readonly': [('is_freeze', '=', True)]}"/>
                <field name="class_fabric_id" attrs="{'required': ['|',('fabric', '=', True),('finish', '=', True)],'readonly': [('is_freeze', '=', True)]}" options="{'no_quick_create': True, 'no_create': True}"/>
                <field name="item_cat_id" options="{'no_quick_create': True, 'no_create': True}"/>
                <field name="item_sub_cat_id" attrs="{'required': [('finish', '=', True)],'readonly': [('is_freeze', '=', True)]}" options="{'no_quick_create': True, 'no_create': True}"/>
                <field name="dept_id" required="1" attrs="{'readonly': [('is_freeze', '=', True)]}"/>
<!--                <field name="sub_dept_id" attrs="{'required': [('finish', '=', True)]}" options="{'no_quick_create': True, 'no_create': True}" style="color:blue;"/>-->
                <field name="sub_dept" attrs="{'required': [('finish', '=', True)],'readonly': [('is_freeze', '=', True)]}"/>
                <field name="user_id" invisible="1"/>

            </xpath>
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="line_item_id" options="{'no_quick_create': True, 'no_create': True}"/>
                <field name="product_group_id" options="{'no_quick_create': True, 'no_create': True}"/>
                <field name="size_range_id" options="{'no_quick_create': True, 'no_create': True}"/>
                <field name="life_type_id" attrs="{'required': ['|',('fabric', '=', True),('finish', '=', True)],'readonly': [('is_freeze', '=', True)]}" options="{'no_quick_create': True, 'no_create': True}"/>
                <field name="accessories_type_id" attrs="{'invisible': [('accessories', '=', False)],'required': [('accessories', '=', True)],'readonly': [('is_freeze', '=', True)]}" options="{'no_quick_create': True, 'no_create': True}"/>
                <field name="product_gender"/>

                <field name="acc_seq" invisible="1"/>
                <field name="fab_seq" invisible="1"/>

                <field name="fin_men_seq" invisible="1"/>
                <field name="fin_women_seq" invisible="1"/>
                <field name="fin_boy_infan_seq" invisible="1"/>
                <field name="fin_boy_tod_seq" invisible="1"/>
                <field name="fin_boy_kid_seq" invisible="1"/>
                <field name="fin_girl_infan_seq" invisible="1"/>
                <field name="fin_girl_tod_seq" invisible="1"/>
                <field name="fin_girl_kid_seq" invisible="1"/>

                <field name="product_group_type" invisible="1"/>
                <field name="is_freeze" invisible="1"/>

            </xpath>

<!--            Remove Create Edit-->

            <xpath expr="//field[@name='attribute_line_ids']//tree/field[@name='attribute_id']" position="attributes">
				<attribute name="options">{'no_quick_create': True, 'no_create_edit':True}</attribute>
			</xpath>

            <xpath expr="//field[@name='attribute_line_ids']//tree/field[@name='value_ids']" position="attributes">
				<attribute name="options">{'no_quick_create': True, 'no_create_edit':True}</attribute>
			</xpath>

            <xpath expr="//field[@name='categ_id']" position="attributes">
				<attribute name="options">{'no_quick_create': True, 'no_create_edit':True}</attribute>
			</xpath>

            <xpath expr="//field[@name='taxes_id']" position="attributes">
				<attribute name="options">{'no_quick_create': True, 'no_create_edit':True}</attribute>
			</xpath>

        </field>
    </record>

